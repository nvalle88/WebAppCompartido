
@model ds.zeus.entities.Modelos.Compartido.Factor

@{
    ViewData["Title"] = "Editar";
}
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar Factor</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <input type="hidden" asp-for="IdFactor" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-map-marker"></i>

                                                <input onkeypress="return NumCheck(event, this)" asp-for="Porciento" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Porciento)" />
                                                <span asp-validation-for="Porciento" class="text-danger"></span>
                                            </label>
                                        </section>

                                    </div>
                                    <footer>
                                        <div class="form-group">
                                            <div class="col-md-offset-4 col-md-offset-12">
                                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                                @Html.ActionLink("Cancelar", "Index", "Factores", new { }, new { @class = "btn btn-default" })
                                            </div>
                                        </div>
                                        <span class="text-danger">@ViewData["Error"]</span>
                                    </footer>
                                </fieldset>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- END COL -->
            <!-- NEW COL START -->
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {

    <SCRIPT LANGUAGE="JavaScript">
        function NumCheck(e, field) {
            key = e.keyCode ? e.keyCode : e.which
            // backspace
            if (key == 8) return true
            // 0-9
            if (key > 47 && key < 58) {
                if (field.value == "") return true
                regexp = /.[0-9]{2}$/
                return !(regexp.test(field.value))
            }
            // .
            if (key == 46) {
                if (field.value == "") return false
                regexp = /^[0-9]+$/
                return regexp.test(field.value)
            }
            // other key
            return false

        }

    </SCRIPT>

}

}
