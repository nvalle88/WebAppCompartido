@model ApplicationUser

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Usuario
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Apellido
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserLastName)
        </dd>
    </dl>
</div>
<h4>Lista de roles del usuario</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>No existen roles para este usuario</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Regresar", "Index")
</p>



