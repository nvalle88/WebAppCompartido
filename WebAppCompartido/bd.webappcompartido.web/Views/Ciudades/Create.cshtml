
@model ds.zeus.entities.Modelos.Compartido.Ciudad

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-8">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Nueva ciudad</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <fieldset>

                                    <section class="col col-4">
                                        <label class="select">
                                            <select onchange="GetProvincias()" asp-for="IdPais" class="form-control" asp-items="@(new SelectList(ViewBag.ListaPaises,"IdPais","Nombre"))">
                                            </select>
                                            <span asp-validation-for="IdProvincia" class="text-danger"></span>
                                            <i></i>
                                        </label>
                                    </section>
                                    <section class="col col-4">
                                        <label class="select">
                                            <select asp-for="IdProvincia" id="IdProvincia" name="IdProvincia" class="form-control" asp-items="@(new SelectList(string.Empty,"IdProvincia","Nombre"))"></select>
                                            <span asp-validation-for="IdProvincia" class="text-danger"></span>
                                            <i></i>
                                        </label>
                                    </section>

                                    <div class="row">
                                    </div>
                                    <footer>
                                        <div class="form-group">
                                            <div class="col-md-offset-4 col-md-offset-12">
                                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                                @Html.ActionLink("Cancelar", "Index", "Ciudades", new {}, new { @class = "btn btn-default" })
                                            </div>
                                        </div>
                                        <span class="text-danger">@ViewData["Error"]</span>
                                    </footer>
                                </fieldset>
                                
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- END COL -->
            <!-- NEW COL START -->
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {



    <script >
       function GetProvincias ()
        {
            $('#IdPais').change(function ()
            { 
                var url = '@Url.Content("~/")' + "Ciudades/GetProvincias";
                var ddlsource = "IdPais";
                $.getJSON(url, { idPais: $(ddlsource).val() }, function (data)
                { 
                    var items = '';
                    $("#IdProvincia").empty();
                    $.each(data, function (i, provincia)
                    {
                        items += "<option value='" + provincia.value + "'>" + provincia.text + "</option>";
                    });
                    $('#IdProvincia').html(items);
                });
            });
        });
    </script>


}
